# Logrotate configuration for system logs
# Managed by Ansible - Do not edit manually

/var/log/auth.log {
    weekly
    missingok
    rotate {{ common_log_retention_days | int // 7 }}
    compress
    delaycompress
    notifempty
    create 640 root adm
    postrotate
        systemctl reload rsyslog
    endscript
}

