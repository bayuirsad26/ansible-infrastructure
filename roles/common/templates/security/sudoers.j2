# Sudoers configuration for {{ item.name }}
# Managed by Ansible - Do not edit manually

{% if item.sudo_nopasswd | default(false) %}
{{ item.name }} ALL=(ALL) NOPASSWD:ALL
{% else %}
{{ item.name }} ALL=(ALL:ALL) ALL
{% endif %}

# Allow {{ item.name }} to run specific commands without password
{% if item.sudo_commands is defined %}
{% for command in item.sudo_commands %}
{{ item.name }} ALL=(ALL) NOPASSWD:{{ command }}
{% endfor %}
{% endif %}
