# Traefik Docker Compose configuration
# Managed by Ansible - Do not edit manually

version: '3.8'

services:
  traefik:
    image: traefik:v{{ traefik_version }}
    container_name: {{ traefik_container_name }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    ports:
      - "{{ traefik_web_port }}:{{ traefik_web_port }}"
      - "{{ traefik_websecure_port }}:{{ traefik_websecure_port }}"
{% if traefik_dashboard_enabled %}
      - "{{ traefik_dashboard_port }}:8080"
{% endif %}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - {{ traefik_data_dir }}/traefik.yml:/traefik.yml:ro
      - {{ traefik_data_dir }}/dynamic.yml:/etc/traefik/dynamic.yml:ro
{% if traefik_letsencrypt_enabled %}
      - {{ traefik_data_dir }}/letsencrypt:/letsencrypt
{% endif %}
    networks:
      - {{ traefik_network }}
    labels:
      - "traefik.enable=true"
{% if traefik_dashboard_enabled %}
      - "traefik.http.routers.traefik.rule=Host(`{{ traefik_dashboard_subdomain }}.{{ traefik_domain }}`)"
      - "traefik.http.routers.traefik.service=api@internal"
{% if traefik_letsencrypt_enabled %}
      - "traefik.http.routers.traefik.tls.certresolver={{ traefik_letsencrypt_resolver }}"
{% endif %}
{% endif %}
    healthcheck:
      test: ["CMD", "traefik", "healthcheck", "--ping"]
      interval: 30s
      timeout: 3s
      retries: 3

networks:
  {{ traefik_network }}:
    external: true
