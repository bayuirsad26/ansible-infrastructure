# System log rotation configuration
# Managed by Ansible - Do not edit manually

/var/log/syslog
/var/log/auth.log
/var/log/kern.log
/var/log/mail.log
/var/log/daemon.log
/var/log/user.log
/var/log/cron.log
{
    {{ logging_rotation_frequency }}
    rotate {{ logging_retention_days if logging_rotation_frequency == 'daily' else (logging_retention_days // 7) }}
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    maxsize {{ logging_max_log_size }}
    create 640 root adm
    postrotate
        systemctl reload rsyslog
    endscript
}
